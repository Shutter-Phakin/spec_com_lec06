<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<div id="students">
  <% @students.each do |student| %>
    <%= render student %>
    <p>
      <%= link_to "Show this student", student %>
      <%= link_to "Student's Score", student_edit_score_path(student.id), stu:student %><br>
    </p>
  <% end %>
</div>

<%= link_to "New student", new_student_path %>

